<div style="padding-top: 8px">
  <ul class="tasks zebra-list">

    <% @project.tasks.roots.each do |subtask| %>
    <li>
      <input type="checkbox"> 
      <span class="title"><%= link_to subtask.title, subtask %>
        <div style="float: right">
          <%= link_to icon(:edit, :white) + ' Edit', "#editProject", :data => { :url => edit_project_path(@project), :toggle => "modal" }, :class => "edit-project-button btn btn-primary" %>  
          <%= link_to icon(:remove , :white) + ' Remove', subtask, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-danger" %>
        </div>
      </span> 
     <span class="meta">Created <em><%=time_ago_in_words(subtask.created_at)%></em> ago by <em><%=subtask.project.user.name%></em></span>
   </li>
   <% end %>
 </ul>
</div>

<h1>Tasks</h1>

<table id="subtasks" class="display">
<thead>
  <tr>
    <th>Priority</th>
    <th>Task Title</th>
    <th>Estimated Time</th>
    <th>Due Time</th>
    <th>Status</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% @project.tasks.roots.each do |subtask| %>
    <tr>
      <td><%= subtask.priority %></td>
      <td><%= link_to(subtask.title, subtask) %></td>
      <td><%= subtask.estimated_time %></td>
      <td><%= subtask.due_time %></td>
      <td><%= subtask.status %></td>
      <td>
        <%= link_to icon(:edit, :white) + ' Edit', "#editProject", :data => { :url => edit_project_path(@project), :toggle => "modal" }, :class => "edit-project-button btn btn-primary" %>
        <%= link_to icon(:remove , :white) + ' Remove', subtask, :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
</tbody>
</table>

