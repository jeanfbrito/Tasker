
<ul class="tasks zebra-list">

  <% @project.tasks.roots.each do |task| %>
  <li>
    <input type="checkbox"> 
    <span class="title"><%= link_to task.title, task %> 
     || <%= link_to 'Remove', task, :confirm => 'Are you sure?', :method => :delete %>
    </span> 
    <span class="meta">Created <em>1 week ago</em> by <em>Jill</em></span>
  </li>
  <% end %>
</ul>
