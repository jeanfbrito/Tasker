<div style="padding-top: 8px">
  <ul class="tasks zebra-list">

    <% @task.children.each do |subtask| %>
    <li>
      <input type="checkbox"> 
      <span class="title"><%= link_to subtask.title, subtask %> 
       || <%= link_to 'Remove', subtask, :confirm => 'Are you sure?', :method => :delete %>
     </span> 
     <span class="meta">Created <em>1 week ago</em> by <em>Jill</em></span>
   </li>
   <% end %>
 </ul>
</div>