<div class="row-fluid">
<div class="span4 offset1"> 

<h1>Listing tasks</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td> 
    <td align=right; width=30px;><%= link_to 'Show', task %></td>
    <td align=right; width=30px;><%= link_to 'Edit', edit_task_path(task) %></td>
    <td align=right; width=30px;><%= link_to 'Remove', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />

<span class="label label-success">Success</span>

<br> 

<%= link_to 'New task', new_task_path %>
</div>


</div>